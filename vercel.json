{
  "version": 2,
  "name": "domain-analyzer",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/progress/(.*)",
      "destination": "/api/progress"
    },
    {
      "source": "/sites/([^/]+)/(.*)",
      "destination": "/api/sites/$1?file=$2"
    },
    {
      "source": "/sites/([^/]+)/?",
      "destination": "/api/sites/$1"
    },
    {
      "source": "/app",
      "destination": "/public/index.html"
    },
    {
      "source": "/agents.html",
      "destination": "/public/agents.html"
    },
    {
      "source": "/projects.html", 
      "destination": "/public/projects.html"
    },
    {
      "source": "/index.html",
      "destination": "/public/index.html"
    },
    {
      "source": "/",
      "destination": "/public/landing.html"
    }
  ]
}