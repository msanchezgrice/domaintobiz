<nav class="bg-white shadow-sm py-4">
    <div class="max-w-6xl mx-auto px-4 flex justify-between items-center">
        <!-- Logo -->
        <div class="flex items-center">
            <div class="w-8 h-8 rounded-lg mr-3" style="background: linear-gradient(135deg, var(--primary), var(--secondary));">
            </div>
            <span class="text-xl font-bold text-gray-900">{{ site.brand.name }}</span>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-6">
            <a 
                hx-get="/api/nav/features" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#features" 
                class="text-gray-600 hover:text-primary transition-colors"
            >
                Features
            </a>
            {% if site.modules.stripePaywall %}
            <a 
                hx-get="/api/nav/pricing" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#pricing" 
                class="text-gray-600 hover:text-primary transition-colors"
            >
                Pricing
            </a>
            {% endif %}
            {% if site.modules.waitlist %}
            <a 
                hx-get="/api/nav/waitlist" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#waitlist" 
                class="text-gray-600 hover:text-primary transition-colors"
            >
                Join Waitlist
            </a>
            {% endif %}
            
            <!-- CTA Button -->
            <button 
                hx-post="/api/{{ site.content.hero.cta.primary.link }}"
                hx-swap="outerHTML"
                hx-target="#nav-cta-response"
                class="text-white px-6 py-2 rounded-lg font-semibold hover:bg-opacity-90 transition-colors"
                style="background: linear-gradient(135deg, var(--primary), var(--secondary));"
            >
                {{ site.content.hero.cta.primary.text }}
            </button>
        </div>
        
        <!-- Mobile Menu Button -->
        <div class="md:hidden">
            <button 
                hx-post="/api/nav/toggle-mobile"
                hx-target="#mobile-menu"
                hx-swap="outerHTML"
                class="text-gray-600 hover:text-gray-900"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden">
        <div class="px-4 pt-4 pb-4 space-y-3">
            <a 
                hx-get="/api/nav/features" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#features" 
                class="block text-gray-600 hover:text-primary transition-colors"
            >
                Features
            </a>
            {% if site.modules.stripePaywall %}
            <a 
                hx-get="/api/nav/pricing" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#pricing" 
                class="block text-gray-600 hover:text-primary transition-colors"
            >
                Pricing
            </a>
            {% endif %}
            {% if site.modules.waitlist %}
            <a 
                hx-get="/api/nav/waitlist" 
                hx-target="#main-content" 
                hx-swap="innerHTML"
                href="#waitlist" 
                class="block text-gray-600 hover:text-primary transition-colors"
            >
                Join Waitlist
            </a>
            {% endif %}
            
            <button 
                hx-post="/api/{{ site.content.hero.cta.primary.link }}"
                hx-swap="outerHTML"
                hx-target="#nav-cta-response"
                class="w-full text-white px-6 py-2 rounded-lg font-semibold hover:bg-opacity-90 transition-colors mt-4"
                style="background: linear-gradient(135deg, var(--primary), var(--secondary));"
            >
                {{ site.content.hero.cta.primary.text }}
            </button>
        </div>
    </div>
    
    <div id="nav-cta-response" class="px-4"></div>
</nav> 